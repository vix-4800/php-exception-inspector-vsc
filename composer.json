{
    "name": "vix/vigil",
    "description": "PHP @throws analyzer with JSON output for IDE integration",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "nikic/php-parser": "^5.6",
        "phpdocumentor/reflection-docblock": "^5.6",
        "symfony/console": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "Vix\\Vigil\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vix\\Vigil\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/vigil"
    ],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit"
    }
}
